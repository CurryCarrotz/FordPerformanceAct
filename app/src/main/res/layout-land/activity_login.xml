<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:gravity="center"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/ford_act_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ford_act_logo"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/form_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ford_act_logo"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/username_login_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="200dp"
                android:layout_marginLeft="200dp"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/username_login"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/edit_text_view"
                    android:hint="Username"
                    android:inputType="text"
                    android:paddingStart="85dp"
                    android:paddingLeft="85dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:textColor="#fff"
                    android:textColorHint="#c0c0c0"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/username_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/username_icon"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="55dp"
                    android:layout_toRightOf="@id/username_icon"
                    android:layout_toEndOf="@+id/username_icon"
                    android:background="@drawable/username_line"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/password_login_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_login_wrapper"
                android:layout_marginRight="200dp"
                android:layout_marginLeft="200dp"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/password_login"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:paddingStart="85dp"
                    android:paddingLeft="85dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:hint="Password"
                    android:textColorHint="#c0c0c0"
                    android:background="@drawable/edit_text_view"/>

                <ImageView
                    android:id="@+id/password_icon"
                    android:layout_width="55dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/password_icon"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="55dp"
                    android:layout_toRightOf="@id/password_icon"
                    android:layout_toEndOf="@+id/password_icon"
                    android:background="@drawable/username_line"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button_login_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="200dp"
                android:layout_marginLeft="200dp">

                <TextView
                    android:id="@+id/forgot_password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot your password? "
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/go_to_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/forgot_password_text"
                    android:layout_toRightOf="@+id/forgot_password_text"
                    android:text="Click here."
                    android:textColor="#5DC0E1"/>

                <Button
                    android:id="@+id/button_login"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/forgot_password_text"
                    android:text="Login"
                    android:textColor="#fff"
                    android:background="@drawable/btn_login"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>