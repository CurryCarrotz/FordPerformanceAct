<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_background"
    android:gravity="center"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/ford_act_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ford_act_logo"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Ford Performance Club of ACT"
        />

    <RelativeLayout
        android:id="@+id/form_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ford_act_logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="25dp">


            <RelativeLayout
                android:id="@+id/username_login_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/label_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="#fff"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/username_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:textColorHint="#c0c0c0"
                    android:layout_below="@+id/label_username"
                    android:singleLine="true"
                    app:backgroundTint="#fff"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/icon_username"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/label_username"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/password_login_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/label_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#fff"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/password_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:textColorHint="#c0c0c0"
                    android:layout_below="@id/label_password"
                    android:singleLine="true"
                    app:backgroundTint="#fff"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/icon_password"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/label_password"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button_login_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password_login_wrapper"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp">

                <TextView
                    android:id="@+id/forgot_password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot your password? "
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/go_to_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/forgot_password_text"
                    android:layout_toRightOf="@+id/forgot_password_text"
                    android:text="Click here."
                    android:textColor="#7D7BE0"/>

                <Button
                    android:id="@+id/button_signin"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/forgot_password_text"
                    android:text="SIGN IN"
                    android:textColor="#fff"
                    android:background="@drawable/btn_signin"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>