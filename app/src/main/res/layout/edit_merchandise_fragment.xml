<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/image_background">

    <RelativeLayout
        android:id="@+id/options_container"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="206dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:text="Title:"
            android:textColor="@color/colorGeneralText"
            android:textSize="24sp"
            android:gravity="center_vertical"
            />

        <RelativeLayout
            android:id="@+id/title_box"
            android:layout_width="150dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/rectangle_9"
            >

            <TextView
                android:id="@+id/title2"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:text="Black Tee"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center_horizontal|center_vertical"
                />


        </RelativeLayout>

        <TextView
            android:id="@+id/size"
            android:layout_width="180dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="20dp"
            android:text="Available Sizes:"
            android:textColor="@color/colorGeneralText"
            android:textSize="20sp"
            android:gravity="center_vertical"
            />

        <RelativeLayout
            android:id="@+id/sizes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="20dp">

            <RelativeLayout
                android:id="@+id/xsmall"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_2">

                <TextView
                    android:id="@+id/xs"
                    android:layout_width="31dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text="XS"
                    android:textColor="@color/colorGeneralText"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/small"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="39dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_1">

                <TextView
                    android:id="@+id/s"
                    android:layout_width="31dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text="S"
                    android:textColor="@color/colorGeneralText"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/medium"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="78dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_1">

                <TextView
                    android:id="@+id/m"
                    android:layout_width="31dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text="M"
                    android:textColor="@color/colorGeneralText"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/large"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="117dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_1">

                <TextView
                    android:id="@+id/l"
                    android:layout_width="31dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text="L"
                    android:textColor="@color/colorGeneralText"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/xlarge"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="156dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_2">

                <TextView
                    android:id="@+id/xl"
                    android:layout_width="31dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text="XL"
                    android:textColor="@color/colorGeneralText"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/xxlarge"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="195dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_2">

                <TextView
                    android:id="@+id/xxl"
                    android:layout_width="31dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text="2XL"
                    android:textColor="@color/colorGeneralText"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/price"
            android:layout_width="206dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="20dp"
            android:text="Price (each):"
            android:textColor="@color/colorGeneralText"
            android:textSize="20sp"
            android:gravity="center_vertical"
            />

        <RelativeLayout
            android:id="@+id/price_box"
            android:layout_width="150dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="160dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="144dp"
            android:background="@drawable/rectangle_9"
            >

            <TextView
                android:id="@+id/price2"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:text="$10.50"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center_horizontal|center_vertical"
                />


        </RelativeLayout>

        <CheckBox
            android:id="@+id/exclusive_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorGeneralText"
            android:textSize="20sp"
            android:text="Member Exclusive"
            android:buttonTint="@color/colorGeneralText"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/image_box"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="270dp">

        <TextView
            android:id="@+id/images"
            android:layout_width="206dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:text="Images"
            android:textColor="@color/colorGeneralText"
            android:textSize="20sp"
            android:gravity="center_vertical"
            />

        <RelativeLayout
            android:id="@+id/shirt_box"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:background="#778899">

            <View
                android:id="@+id/shirt_image"
                android:layout_width="78dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="11dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/black_tee"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/x_box"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="34dp"
            android:background="@drawable/ellipse_5">

            <TextView
                android:id="@+id/x"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-8dp"
                android:text="x"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="center_horizontal|center_vertical"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shirt_box2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="150dp"
            android:background="#778899">

            <View
                android:id="@+id/shirt_image2"
                android:layout_width="78dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="11dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/black_tee"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/x_box2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="240dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="34dp"
            android:background="@drawable/ellipse_5">

            <TextView
                android:id="@+id/x2"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-8dp"
                android:text="x"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="center_horizontal|center_vertical"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shirt_box3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="270dp"
            android:background="#778899">

            <View
                android:id="@+id/shirt_image3"
                android:layout_width="78dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="11dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/black_tee"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/x_box3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="360dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="34dp"
            android:background="@drawable/ellipse_5">

            <TextView
                android:id="@+id/x3"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-8dp"
                android:text="x"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="center_horizontal|center_vertical"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shirt_add_box"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="30dp"
            android:background="#778899">

            <TextView
                android:id="@+id/add_text"
                android:layout_width="111dp"
                android:layout_height="23dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Add"
                android:textColor="@color/colorGeneralText"
                android:textSize="20sp"
                android:gravity="center_horizontal|center_vertical"
                />

            <View
                android:id="@+id/gallery"
                android:layout_width="46dp"
                android:layout_height="38dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="27dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/camera_nav"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/accept_box"
        android:layout_width="386dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="664dp"
        android:background="@drawable/rectangle_1"
        android:elevation="4dp">

        <TextView
            android:id="@+id/edit_merch"
            android:layout_width="386dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="Accept Changes"
            android:textColor="#000000"
            android:textSize="22sp" />
    </RelativeLayout>

</RelativeLayout>