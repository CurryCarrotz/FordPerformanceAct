<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/image_background">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="378dp"
        android:layout_height="104dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="19dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle_8">

        <View
            android:id="@+id/shirt_image"
            android:layout_width="80dp"
            android:layout_height="89dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="19dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_tee"
            />

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/black_tee"
                android:layout_width="190dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Black Tee"
                android:textColor="@color/colorGeneralText"
                android:textSize="24sp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/price"
                android:layout_width="106dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="$10.50"
                android:textColor="@color/colorGeneralText"
                android:textSize="20sp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/remove_from"
                android:layout_width="180dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="55dp"
                android:text="Remove from cart"
                android:textColor="#00D1FF"
                android:textSize="18sp"
                android:gravity="center_vertical"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grey_quanti"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="275dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="33dp"
            android:background="@drawable/grey_quanti">

            <TextView
                android:id="@+id/minus"
                android:layout_width="23dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-12dp"
                android:text="-"
                android:textColor="#000000"
                android:textSize="36sp"
                android:gravity="center_horizontal|center_vertical"
                />

            <RelativeLayout
                android:id="@+id/price_box"
                android:layout_width="46dp"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_9"
                >

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="9dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:gravity="center_horizontal|center_vertical"
                    />


            </RelativeLayout>

            <TextView
                android:id="@+id/plus"
                android:layout_width="23dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="66dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-12dp"
                android:text="+"
                android:textColor="#000000"
                android:textSize="36sp"
                android:gravity="center_horizontal|center_vertical"
                />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item2"
        android:layout_width="378dp"
        android:layout_height="104dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/rectangle_8"
        android:elevation="4dp">

        <View
            android:id="@+id/shirt_image2"
            android:layout_width="80dp"
            android:layout_height="89dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="19dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/beanie"
            />

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/black_tee2"
                android:layout_width="190dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Beanie"
                android:textColor="@color/colorGeneralText"
                android:textSize="24sp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/price2"
                android:layout_width="106dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="$10.50"
                android:textColor="@color/colorGeneralText"
                android:textSize="20sp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/remove_from2"
                android:layout_width="180dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="55dp"
                android:text="Remove from cart"
                android:textColor="#00D1FF"
                android:textSize="18sp"
                android:gravity="center_vertical"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grey_quanti2"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="275dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="33dp"
            android:background="@drawable/grey_quanti">

            <TextView
                android:id="@+id/minus2"
                android:layout_width="23dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-12dp"
                android:text="-"
                android:textColor="#000000"
                android:textSize="36sp"
                android:gravity="center_horizontal|center_vertical"
                />

            <RelativeLayout
                android:id="@+id/price_box2"
                android:layout_width="46dp"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_9"
                >

                <TextView
                    android:id="@+id/amount2"
                    android:layout_width="9dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:gravity="center_horizontal|center_vertical"
                    />


            </RelativeLayout>

            <TextView
                android:id="@+id/plus2"
                android:layout_width="23dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="66dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-12dp"
                android:text="+"
                android:textColor="#000000"
                android:textSize="36sp"
                android:gravity="center_horizontal|center_vertical"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rectangle_8"
        android:layout_width="378dp"
        android:layout_height="156dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="315dp"
        android:background="@drawable/rectangle_8"
        android:elevation="4dp">

        <TextView
            android:id="@+id/list_item"
            android:layout_width="190dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="Black Tee"
            android:textColor="@color/colorGeneralText"
            android:textSize="24sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/price_amount"
            android:layout_width="230dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:text="1 x $10.50     $10.50"
            android:textColor="@color/colorGeneralText"
            android:textSize="20sp"
            android:gravity="right|center_vertical"
            />

        <TextView
            android:id="@+id/list_item2"
            android:layout_width="190dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:text="Beanie"
            android:textColor="@color/colorGeneralText"
            android:textSize="24sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/price_amount2"
            android:layout_width="230dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="52dp"
            android:text="1 x $10.50     $21.00"
            android:textColor="@color/colorGeneralText"
            android:textSize="20sp"
            android:gravity="right|center_vertical"
            />

        <TextView
            android:id="@+id/list_total"
            android:layout_width="190dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:text="Total (incl GST)"
            android:textColor="@color/colorGeneralText"
            android:textSize="24sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/price_total"
            android:layout_width="230dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="92dp"
            android:text="$31.50"
            android:textColor="@color/colorGeneralText"
            android:textSize="20sp"
            android:gravity="right|center_vertical"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_box"
        android:layout_width="386dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="664dp"
        android:background="@drawable/rectangle_1"
        android:elevation="4dp">

        <TextView
            android:id="@+id/confirm_order"
            android:layout_width="386dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="Confirm Order"
            android:textColor="#000000"
            android:textSize="22sp" />
    </RelativeLayout>

</RelativeLayout>