<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_background"
    tools:context=".EventPhotosActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/event_photos_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Event Photos"
                android:textAlignment="center"
                android:textColor="@color/colorGeneralText"
                android:textSize="25sp" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/whole_layout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/tile_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tile"
                    android:background="@color/colorTransparent"/>

                <ImageView
                    android:id="@+id/event_image_1"
                    android:layout_width="180dp"
                    android:layout_height="151dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/car_1" />

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/event_image_1"
                    android:text="Snowy Mountains Cruise 2017"
                    android:textAppearance="@style/snowy_mount" />

                <TextView
                    android:id="@+id/number_of_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_title"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/event_image_1"
                    android:text="8 Photos"
                    android:textAppearance="@style/photos" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_photos_2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/tile_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/tile"
                            android:background="@color/colorTransparent"/>

                        <ImageView
                            android:id="@+id/event_image_2"
                            android:layout_width="180dp"
                            android:layout_height="151dp"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/car_2" />

                        <TextView
                            android:id="@+id/event_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/event_image_2"
                            android:text="Shannons Wheels 2017"
                            android:textAppearance="@style/snowy_mount" />

                        <TextView
                            android:id="@+id/number_of_photos_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/event_title_2"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_toEndOf="@+id/event_image_2"
                            android:text="8 Photos"
                            android:textAppearance="@style/photos" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/event_photo_add"
            android:background="@color/colorTransparent"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Event Album"
            android:textAppearance="@style/add_event_a"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>