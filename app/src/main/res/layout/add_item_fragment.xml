<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/image_background">

    <RelativeLayout
        android:id="@+id/shirt_images"
        android:layout_width="411dp"
        android:layout_height="372dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp">

        <View
            android:id="@+id/arrow_left"
            android:layout_width="31dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="181dp"
            android:background="@drawable/arrow_left"
            />

        <View
            android:id="@+id/shirt_image"
            android:layout_width="270dp"
            android:layout_height="372dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/black_tee"
            />

        <View
            android:id="@+id/arrow_right"
            android:layout_width="31dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="360dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="181dp"
            android:background="@drawable/arrow_right"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/options_container"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="404dp">

        <TextView
            android:id="@+id/black_tee"
            android:layout_width="206dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Black Tee"
            android:textColor="@color/colorGeneralText"
            android:textSize="24sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/ford_perfor"
            android:layout_width="190dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="48dp"
            android:gravity="center_vertical"
            android:text="Ford Performance"
            android:textColor="#C2C2C2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/qty"
            android:layout_width="206dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="20dp"
            android:text="Qty"
            android:textColor="@color/colorGeneralText"
            android:textSize="20sp"
            android:gravity="center_vertical"
            />

        <RelativeLayout
            android:id="@+id/grey_quanti"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="79dp"
            android:background="@drawable/grey_quanti">

            <TextView
                android:id="@+id/minus"
                android:layout_width="23dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-12dp"
                android:text="-"
                android:textColor="#000000"
                android:textSize="36sp"
                android:gravity="center_horizontal|center_vertical"
                />

            <RelativeLayout
                android:id="@+id/price_box"
                android:layout_width="46dp"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_9"
                >

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="9dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:gravity="center_horizontal|center_vertical"
                    />


            </RelativeLayout>

            <TextView
                android:id="@+id/plus"
                android:layout_width="23dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="66dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-12dp"
                android:text="+"
                android:textColor="#000000"
                android:textSize="36sp"
                android:gravity="center_horizontal|center_vertical"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/size"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"
            android:text="Size"
            android:textColor="@color/colorGeneralText"
            android:textSize="20sp"
            android:gravity="center_vertical"
            />

        <RelativeLayout
            android:id="@+id/sizes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="116dp"
            android:layout_marginLeft="80dp">

            <RelativeLayout
                android:id="@+id/xsmall"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_2">

                <TextView
                    android:id="@+id/xs"
                    android:layout_width="31dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text="XS"
                    android:textColor="@color/colorGeneralText"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/small"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="38dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_2">

                <TextView
                    android:id="@+id/s"
                    android:layout_width="31dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text="S"
                    android:textColor="@color/colorGeneralText"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/medium"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="76dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_2">

                <TextView
                    android:id="@+id/m"
                    android:layout_width="31dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text="M"
                    android:textColor="@color/colorGeneralText"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/large"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="114dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_1">

                <TextView
                    android:id="@+id/l"
                    android:layout_width="31dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text="L"
                    android:textColor="@color/colorGeneralText"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/xlarge"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="152dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_2">

                <TextView
                    android:id="@+id/xl"
                    android:layout_width="31dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text="XL"
                    android:textColor="@color/colorGeneralText"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/xxlarge"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="190dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_2">

                <TextView
                    android:id="@+id/xxl"
                    android:layout_width="31dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:text="2XL"
                    android:textColor="@color/colorGeneralText"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/price"
            android:layout_width="206dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="20dp"
            android:text="Price (each):"
            android:textColor="@color/colorGeneralText"
            android:textSize="20sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/price2"
            android:layout_width="206dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="160dp"
            android:text="$10.50"
            android:textColor="@color/colorGeneralText"
            android:textSize="20sp"
            android:gravity="center_vertical"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_box"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="664dp"
        android:background="@drawable/rectangle_1"
        android:elevation="4dp">

        <TextView
            android:id="@+id/add"
            android:layout_width="386dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="Add to Cart"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>